<div class="index-center">
  <h1>Search Friends</h1>
</div>

<div class="table-content">
  <table>
    <thead>
      <tr>
        <th>Name:
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
